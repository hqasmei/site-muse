generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id       String @id @default(uuid())
  userId   String
  userName String
  name     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  links Link[]
}

model Link {
  id           String @id @default(uuid())
  linkUrl      String
  imageUrl     String
  imageFileKey String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projectId    String
  userId       String

  project      Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
}